{
  "name": "Classic Theme",
  "version": "1.0.0",
  "description": "Classic e-commerce theme with horizontal navigation",
  "author": "BigS Team",
  "repository": "https://github.com/bigs-themes/classic.git",
  "license": "MIT",
  "features": [
    "horizontal-navigation",
    "responsive-design",
    "live-preview-support",
    "customizable-colors",
    "seo-optimized"
  ],
  "layouts": {
    "main": "src/layouts/Layout.astro",
    "product": "src/layouts/Layout.astro",
    "category": "src/layouts/Layout.astro"
  },
  "components": {
    "header": "src/components/Header.astro",
    "footer": "src/components/Footer.astro",
    "announcementBar": "src/components/AnnouncementBar.astro",
    "productCard": "src/components/ProductCard.astro",
    "cartPopup": "src/components/CartPopup.astro"
  },
  "assets": {
    "css": "src/assets/css/",
    "js": "src/assets/js/",
    "images": "src/assets/images/"
  },
  "dependencies": {
    "tailwindcss": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0"
  },
  "changelog": {
    "2.0.0": [
      "Added sidebar navigation layout",
      "Improved mobile responsiveness",
      "Enhanced live preview support",
      "Updated color scheme and typography"
    ]
  }
} 